# Upstash Redis Configuration
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# Resend Email Service
RESEND_API_KEY=re_your_api_key_here

# Base URL (auto-detected on Vercel, only needed for local dev)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Development Mode (set to false in production)
# When true: skips email validation, Redis storage, and email sending
DEV_MODE=false

# Dev Toggle UI (set to false to hide dev checkbox on homepage)
NEXT_PUBLIC_DEV_TOGGLE=false
